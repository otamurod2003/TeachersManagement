@model TeacherIndexViewModel

@{
    ViewBag.Title = "Teachers page";
}

<div class="row">
    <div class="d-block col-12">
        <a asp-action="create" asp-controller="teacher" class="btn btn-primary m-2">++Add new teacher</a>
    </div>

    @foreach (var teacher in Model.Teachers)
    {
        if (teacher != null)
        {
            <div class="card col-md-4 col-lg-3 col-sm-11 m-1">
                <div class="card-header bg-dark text-light">
                    <h3>Teacher: @teacher.FirstName  @teacher.LastName</h3>
                </div>
                <div class="card-body">
                    <img asp-append-version="true" class="card-img" src="~/images/200117800468_258660.jpg" />
                </div>
                <div class="card-footer">
                    <a class="btn btn-primary" asp-controller="teacher" asp-action="details" asp-route-id="@teacher.Id">Details</a>
                </div>
            </div>        }
        else if(teacher == null)
        {
            <div>
                <h4 class="text-center text-danger">No data to display...</h4>
            </div>
        }
    }








</div>
