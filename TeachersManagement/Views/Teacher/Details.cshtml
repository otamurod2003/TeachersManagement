@model TeacherDetailsViewModel
@{ 
    ViewBag.Title = "Teacher details";
}
<h4 class="text-center fw-bolder">Teacher details</h4>
<div class="card col-lg-8 col-sm-10 col-md-8 col-xl-3">
    <div class="card-header">
        <h3>Name: @Model.Teacher.FirstName  @Model.Teacher.LastName</h3>
    </div>
    <div class="card-body">
        <ul>
            <li>Teacher Id: @Model.Teacher.Id</li>
            <li>Speciality: @Model.Teacher.Specialty</li>
            <li>Date of birth: @Model.Teacher.DateOfBirth</li>
            <li>Experience: @Model.Teacher.Experience</li>
        </ul>
    </div>
    <div class="card-footer">
        <a asp-controller="teacher" asp-action="update" asp-route-id="@Model.Teacher.Id" class="btn btn-warning">Update</a>
        <a asp-controller="teacher" asp-action="delete" asp-route-id="@Model.Teacher.Id" class="btn btn-danger">Delete</a>
        <a asp-controller="teacher" asp-action="index" class="btn btn-primary">Cancel</a>
    </div>
</div>